<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_100">

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:background="@color/jobs_item_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/check_evaluation_3"
        app:layout_constraintStart_toStartOf="@+id/check_evaluation_1"
        app:layout_constraintTop_toTopOf="@+id/check_evaluation_2" />

    <ImageView
        android:id="@+id/check_evaluation_2"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/round_check_back"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:focusable="true"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/check_evaluation_color" />

    <ImageView
        android:id="@+id/check_evaluation_1"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/round_check_back"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:focusable="true"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_done"
        app:layout_constraintEnd_toStartOf="@+id/check_evaluation_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/check_evaluation_color" />

    <ImageView
        android:id="@+id/check_evaluation_3"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/round_check_back"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:focusable="true"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/check_evaluation_2"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/check_evaluation_color" />

</androidx.constraintlayout.widget.ConstraintLayout>