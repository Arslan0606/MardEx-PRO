<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:background="@color/jobs_item_color"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:cardUseCompatPadding="false">

    <LinearLayout
        android:id="@+id/job_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/jobs_item_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingBottom="@dimen/_4sdp">

        <ImageView
            android:id="@+id/jobImage"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            android:src="@drawable/ic_job" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/jobName"
            style="@style/TextSmall"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_weight="1"
            android:text="@string/sample_job"
            android:textColor="@color/text_number_color" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            app:thumbTint="@color/white"
            app:track="@drawable/custom_track"
            tools:checked="true" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>