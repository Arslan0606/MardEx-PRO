<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp" />
            <solid android:color="@color/color_grey" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/color_grey" />
            <size android:height="@dimen/_20sdp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp" />
            <solid android:color="@color/new_green" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/new_green" />
            <size android:height="@dimen/_20sdp" />
        </shape>
    </item>
</selector>